doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="preconnect", href="https://fonts.googleapis.com") 
        link(rel="preconnect", href="https://fonts.gstatic.com", crossorigin) 
        link(href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap",rel="stylesheet")
        link(rel="stylesheet", href="css/main.css")
        title Beauty Chairs
    body
        header.header
            nav.menu-top
                .content-zone
                    .menu-top__wrapper
                        ul.menu-top__list 
                            li.menu-top__item 
                                a.menu-top__link(href="#") Доставка
                            li.menu-top__item 
                                a.menu-top__link(href="#") Оплата
                            li.menu-top__item 
                                a.menu-top__link(href="#") Отзывы
                            li.menu-top__item 
                                a.menu-top__link(href="#") Вопрос-ответ
                            li.menu-top__item 
                                a.menu-top__link(href="#") Контакты 
            .main-header
                .content-zone
                    .main-header__wrapper
                        .main-header__logo
                            a(href="#") 
                                img(src="./img/logo.svg", alt="Beaty Logotype")
                        .main-header__contacts 
                            a.main-header__phone(href="tel:+78121234567") 8 (812) 123-45-67
                            button.btn.btn--light.btn--wide.btn--large Обратный звонок 
            nav.catalog-menu
                .content-zone
                    .catalog-menu__wrapper 
                        ul.catalog-menu__list 
                                li.catalog-menu__item 
                                    a.catalog-menu__link(href="#") Парикмахерская
                                li.catalog-menu__item 
                                    a.catalog-menu__link(href="#") Барбершоп
                                li.catalog-menu__item 
                                    a.catalog-menu__link(href="#") Маникюр
                                li.catalog-menu__item 
                                    a.catalog-menu__link(href="#") Педикюр
                                li.catalog-menu__item 
                                    a.catalog-menu__link(href="#") Массаж
                                li.catalog-menu__item 
                                    a.catalog-menu__link(href="#") Мебель 
        section.hero
            .content-zone
                .hero__wrapper
                    .hero__content 
                        h1.hero__title Супер кресло
                        p.hero__description Текст акции всегда отражает суть, а не просто болтовню, поэтому внимательнее
                        button.btn.btn--transparent.btn--wide.btn--large.btn--spaced Подробнее
                    .hero__image
                        img(src="/img/superchair.png", alt="Суперкресло")
        section.offers
            .content-zone
                .offers__wrapper
                    h2.section-header Специальные предложения
                    .offers__items-list
                        .item-card 
                            a.item-card__link-wrapper(href="#")
                                .item-card__content 
                                    .item-card__image
                                        img(src="./img/product_photo_1.jpg", alt="Парикмахерское кресло «Норм» гидравлическое")
                                    h3.item-card__title Парикмахерское кресло «Норм» гидравлическое
                                    p.item-card__price 9 900 ₽
                                    button.btn.btn--dark.btn--narrow.btn--small.btn--spaced Купить
                        .item-card 
                            a.item-card__link-wrapper(href="#")
                                .item-card__content 
                                    .item-card__image
                                        img(src="./img/product_photo_2.jpg", alt="Парикмахерское кресло «Норм» гидравлическое")
                                    h3.item-card__title Парикмахерское кресло «Норм» гидравлическое
                                    p.item-card__price 9 900 ₽
                                    button.btn.btn--dark.btn--narrow.btn--small.btn--spaced Купить
                        .item-card 
                            a.item-card__link-wrapper(href="#")
                                .item-card__content 
                                    .item-card__image
                                        img(src="./img/product_photo_3.jpg", alt="Парикмахерское кресло «Норм» гидравлическое")
                                    h3.item-card__title Парикмахерское кресло «Норм» гидравлическое
                                    p.item-card__price 9 900 ₽
                                    button.btn.btn--dark.btn--narrow.btn--small.btn--spaced Купить
                        .item-card 
                            a.item-card__link-wrapper(href="#")
                                .item-card__content 
                                    .item-card__image
                                        img(src="./img/product_photo_4.jpg", alt="Парикмахерское кресло «Норм» гидравлическое")
                                    h3.item-card__title Парикмахерское кресло «Норм» гидравлическое
                                    p.item-card__price 9 900 ₽
                                    button.btn.btn--dark.btn--narrow.btn--small.btn--spaced Купить
        section.promo
            .content-zone  
                .promo__wrapper
                    .banner.banner--subscribe
                        .banner__wrapper
                            h3.banner__title Получайте бонусы и подарки
                            p.banner__description Каждый месяц разыгрываем<br> 10 000 рублей для наших клиентов
                            input.input#email(type="email", name="mail", placeholder="Введите e-mail")
                    .banner.banner--branches 
                        .banner__wrapper
                            h3.banner__title Заходите к нам
                            p.banner__description Более 300 магазинов<br> по всей России
                            button.btn.btn--wide.btn--transparent.btn--small Карта магазинов
                        
        section.footer
            .footer__contacts
                .content-zone
                    .footer__contacts-wrapper
                        .footer__social-links
                            a.footer__social-link(href="#")
                                svg.footer__social-icon
                                    use(xlink:href="./icons/icons.svg#youtube")
                            a.footer__social-link(href="#")
                                svg.footer__social-icon
                                    use(xlink:href="./icons/icons.svg#vk")
                            a.footer__social-link(href="#")
                                svg.footer__social-icon
                                    use(xlink:href="./icons/icons.svg#fb")
                            a.footer__social-link(href="#")
                                svg.footer__social-icon
                                    use(xlink:href="./icons/icons.svg#instagram")
                        .footer__side-wrapper
                            address.footer__address
                                p.footer__location 198555, Невский пр. 140, офис 140
                                a.footer__phone-number(href="tel:+78121234567") 8 (812) 123-45-67
                            button.btn.btn--wide.btn--light.btn--large Обратный звонок
            .footer__copyrights
                .content-zone
                    .footer__copyrights-wrapper
                        p.footer__copyright Лучший магазин (c) 2019 Все права защищены. Интернет-магазин оборудования для салонов красоты
